@model EvidencePojisteniWebApp.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Nový pojištěnec</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="NumberOfInsuranceContract" class="control-label"></label>
                <input asp-for="NumberOfInsuranceContract" class="form-control" />
                <span asp-validation-for="NumberOfInsuranceContract" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Insurance" class="control-label"></label>
                <input asp-for="Insurance" class="form-control" />
                <span asp-validation-for="Insurance" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Přidat" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-outline-primary" asp-action="Index">Zpět na seznam</a>
</div>

